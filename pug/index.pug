  body.bg-mainColor.debug-screens
    .container.min-h-screen.px-6.py-8.mx-auto.bg-gray-100(class="dark:bg-gray-900")
      // page header / headings
      section#header
        button.bg-gray-300.px-4.py-2.rounded.shadow-sm.transition.w-max.flex.gap-1.float-right(class="hover:bg-gray-400 hover:shadow-none dark:bg-gray-500 dark:hover:bg-gray-600 dark:hover:shadow-none dark:text-white focus:outline-none" @click="dark = !dark")
